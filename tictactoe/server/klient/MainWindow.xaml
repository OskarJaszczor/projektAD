<Window x:Class="klient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:klient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="BlueViolet">
    <Grid>

        <TextBox x:Name="loginTxt" TextWrapping="Wrap" Text="" Width="200" Height="40" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0" FontFamily="Adobe Caslon Pro" />
        <Label Content="Player Name" Margin="0,0,0,100" Width="170" Height="43" FontSize="28" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Adobe Caslon Pro" />
        <Button Content="START" HorizontalAlignment="Center" Margin="0,100,0,0" Width="130" Height="30" Grid.Row="1" VerticalAlignment="Center" Background="#FF00FF33" FontSize="20" FontFamily="Arial Rounded MT Bold" Click="Button_Click"/>

    </Grid>
</Window>
